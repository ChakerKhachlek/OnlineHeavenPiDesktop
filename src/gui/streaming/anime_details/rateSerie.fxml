<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" >
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="500.0">
         <children>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label text="Rating">
                     <font>
                        <Font name="Bauhaus 93" size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="ratingTextField" style="-fx-background-radius: 50px;" />
               </children>
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="500.0">
               <children>
                  <Label fx:id="errorLabel" text="Rating must be a valid number between 0 and 10 !" textAlignment="CENTER" textFill="RED" visible="false">
                     <font>
                        <Font name="Arial" size="16.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="30.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="22.0" prefWidth="500.0">
               <children>
                  <JFXButton fx:id="rateButton" prefHeight="32.0" prefWidth="137.0" style="-fx-background-color: #FFEB3B; -fx-text-fill: white;" text="Rate now !">
                     <font>
                        <Font name="Bauhaus 93" size="17.0" />
                     </font>
                  </JFXButton>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
