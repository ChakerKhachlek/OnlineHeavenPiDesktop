    <HBox alignment="CENTER" layoutY="420.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
        <Text fill="#343a40" strokeType="OUTSIDE" strokeWidth="0.0" text="Vous n'avez pas de compte ? " />
        <Button fx:id="btnSignup" mnemonicParsing="false" onAction="#signUp" styleClass="signup-button" text="S'inscrire" textFill="#343a40">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
    </HBox>
     
    <Button mnemonicParsing="false" onAction="#backend" styleClass="success-button" text="Back" textFill="#FFFFFF" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
        <font>
            <Font name="System Bold" size="16.0" />
        </font>
    </Button>
</AnchorPane>
