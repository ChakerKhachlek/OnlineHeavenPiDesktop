<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="500.0" style="-fx-background-color: white" stylesheets="@../utils/MainStyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pidev.gui.LoginController">
    
    <styleClass>
        <String fx:value="window-rounded" />
        <String fx:value="background-white" />
    </styleClass>
    <Pane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
         <Button fx:id="btnforgot" layoutX="141.0" layoutY="384.0" mnemonicParsing="false" onAction="#forgotPassword" prefHeight="16.0" prefWidth="219.0" style="-fx-background-color: #ffffff;" text="Forgot Password ?" textFill="#07023b">
            <font>
               <Font size="10.0" />
            </font>
         </Button>
      </children></Pane>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Connexion" textAlignment="CENTER" AnchorPane.leftAnchor="180.0" AnchorPane.topAnchor="20.0">
        <font>
            <Font name="Segoe UI" size="30.0" />
        </font>
    </Text>
    <Text layoutX="40.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
    <TextField fx:id="inputEmail" layoutY="130.0" prefHeight="50.0" promptText="Tapez votre username" styleClass="form-control" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" />
    <Text layoutX="40.0" layoutY="220.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Mot de passe" />
    <PasswordField fx:id="inputPassword" layoutY="230.0" prefHeight="50.0" promptText="Tapez votre mot de passe" styleClass="form-control" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" />
