<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane stylesheets="@../../../utils/MainStyle.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane layoutX="30.0" layoutY="30.0" style="-fx-background-color: white;" styleClass="window-rounded"
                AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
                AnchorPane.topAnchor="30.0">
        <effect>
            <DropShadow blurType="GAUSSIAN" color="#00000033" height="50.0" radius="24.5" width="50.0"/>
        </effect>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <BorderPane>
                <center>
                    <ImageView fx:id="imageIV" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../../images/mdi/image-placeholder.png"/>
                        <BorderPane.margin>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                        </BorderPane.margin>
                    </ImageView>
                </center>
            </BorderPane>
            <VBox spacing="10.0">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <Text fx:id="usernameText" text="Username" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="lastNameText" text="LastName" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="genderText" text="Gender" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="bioText" text="Bio" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="coverImageText" text="CoverImage" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="rolesText" text="Roles" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="isVerifiedText" text="IsVerified" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                
            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <Text fx:id="firstNameText" text="FirstName" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="emailText" text="Email" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="ageText" text="Age" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="countryText" text="Country" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="passwordText" text="Password" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="apiTokenText" text="ApiToken" wrappingWidth="190">
                <font>
                    <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                
            </VBox>
            
            <VBox>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <Button fx:id="editButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" text="Modifier" styleClass="light-button" >
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="deleteButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" text="Supprimer" styleClass="light-button" >
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
            </VBox>
            
        </HBox>
    </AnchorPane>
</AnchorPane>
